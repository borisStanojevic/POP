<Window x:Class="MyApplication.UI.FurnitureTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApplication.UI"
        mc:Ignorable="d"
        Title="FurnitureTypeWindow" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Grid Background="MintCream">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblId" Grid.Row="0" Grid.Column="0" Content="ID" HorizontalAlignment="Center" Margin="26,19,34.8,26.4" FontWeight="Bold" Width="68" VerticalAlignment="Center" Height="25" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <TextBox Padding="0" BorderThickness="1" VerticalContentAlignment="Center" Grid.Row="0" Width="267" Grid.Column="1" HorizontalAlignment="Center" Name="tbId" Margin="10.2,19,67.6,16.4" Height="35" VerticalAlignment="Center" HorizontalScrollBarVisibility="Disabled" SelectionOpacity="0"/>
        <Label x:Name="lblName" Grid.Column="0" Content="Name" HorizontalAlignment="Center" Margin="26,29.6,35.8,26" FontWeight="Bold" Width="67" VerticalAlignment="Center" Height="26" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <TextBox Padding="0" BorderThickness="1" VerticalContentAlignment="Center" Width="266" Grid.Column="1" x:Name="tbName" Margin="11.2,20.6,67.6,26" Height="35" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalScrollBarVisibility="Disabled" SelectionOpacity="0"/>
        <Button x:Name="btnAddEdit" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="9.4,36.2,0,20" Grid.Row="3" VerticalAlignment="Top" Width="95"/>
        <Label x:Name="lblDeleted" Content="Deleted" HorizontalAlignment="Left" Height="25" Margin="23,10.4,0,0" Grid.Row="2" VerticalAlignment="Top" Width="67" FontWeight="Bold" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="142.4,36.2,0,20" Grid.Row="3" VerticalAlignment="Top" Width="95" IsCancel="True" Click="CloseWindow"/>
        <CheckBox x:Name="cbDeleted" Content="Yes" Grid.Column="1" HorizontalAlignment="Left" Height="16" Margin="9.8,19.4,0,0" Grid.Row="2" VerticalAlignment="Top" Width="82"/>
    </Grid>
</Window>
